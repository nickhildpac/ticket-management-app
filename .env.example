# ============================================
# SECURITY WARNING: Never commit .env to git!
# ============================================
# Copy this file to .env and update with your values
# The .env file is automatically loaded by docker-compose

# ============================================
# Backend Configuration
# ============================================
# IMPORTANT: Generate a secure JWT secret for production!
# Use: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-characters-long

# Database connection string (auto-generated from POSTGRES_* variables below)
# Format: postgres://user:password@host:port/database?sslmode=disable
DB_ADDR=postgres://postgres:postgres@postgres:5432/ticket_management?sslmode=disable

# Backend API port
PORT=8080

# ============================================
# Frontend Configuration
# ============================================
# API server URL (for build-time configuration)
# In production, this should be your actual backend URL
VITE_API_URL=http://localhost:8080
VITE_SERVER_URL=http://localhost:8080

# ============================================
# Database Configuration
# ============================================
# PostgreSQL database name
POSTGRES_DB=ticket_management

# PostgreSQL user
POSTGRES_USER=postgres

# IMPORTANT: Change this password in production!
# Use: openssl rand -base64 16
POSTGRES_PASSWORD=postgres

# ============================================
# Monitoring Configuration
# ============================================
# Grafana admin password
# IMPORTANT: Change this in production!
GRAFANA_PASSWORD=admin

# ============================================
# Resource Limits (optional)
# ============================================
# Backend Memory Limit
BACKEND_MEMORY_LIMIT=512M
# Frontend Memory Limit
FRONTEND_MEMORY_LIMIT=256M
# PostgreSQL Memory Limit
POSTGRES_MEMORY_LIMIT=512M

